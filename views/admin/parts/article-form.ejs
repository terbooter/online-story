<style>
    textarea {
        height: 200px;
    }
</style>
<form action="" method="post">
    <input type="hidden" class="form-control" name="id" value="<%= post.id %>">
    <div class="form-group">
        <label for="url">
            URL
        </label>
        <%
        let isPublic = "";
        if (post.isPublic && post.isPublic.length > 0) {
            isPublic = "checked";
        }
        %>
        <input id="url" type="text" class="form-control" name="url" value="<%= post.url %>">
    </div>
    <div class="form-group">
        <label for="is-public">Видна всем</label>
        <input id="is-public" type="checkbox" name="isPublic" <%= isPublic %>>
    </div>
    <div class="form-group">
        <label for="title">
            Заголовок
        </label>
        <input id="title" type="text" class="form-control" name="title" value="<%= post.title %>">
    </div>

    <div class="form-group">
        <label for="body">
            Текст
        </label>
        <textarea id="body" type="text" class="form-control" name="body">
            <%= post.body %>
        </textarea>
    </div>
    <input type="submit">
</form>