<style>
    textarea {
        height: 200px;
    }
</style>
<form action="" method="post">
    <input type="hidden" class="form-control" name="id" value="<%= post.id %>">
    <input type="hidden" class="form-control" name="category" value="<%= post.category %>">
    <div class="form-group">
        <label for="url">
            URL
        </label>
        <input id="url" type="text" class="form-control" name="url" value="<%= post.url %>">
    </div>
    <div class="form-group">
        <label for="img">
            IMG
        </label>
        <input id="img" type="text" class="form-control" name="img" value="<%= post.img %>">
    </div>
    <%
    let isPublic = "";
    if (post.isPublic && post.isPublic.length > 0) {
        isPublic = "checked";
    }

    let featured = "";
    if (post.featured && post.featured.length > 0) {
        featured = "checked";
    }
    %>
    <div class="form-group">
        <label for="is-public">Видна всем</label>
        <input id="is-public" type="checkbox" name="isPublic" <%= isPublic %>>
    </div>
    <div class="form-group">
        <label for="featured">Избранное</label>
        <input id="featured" type="checkbox" name="featured" <%= featured %>>
    </div>
    <div class="form-group">
        <label for="title">
            Заголовок
        </label>
        <input id="title" type="text" class="form-control" name="title" value="<%= post.title %>">
    </div>

    <div class="form-group">
        <label for="body">
            Текст
        </label>
        <textarea id="body" type="text" class="form-control" name="body"><%= post.body %></textarea>
    </div>
    <input type="submit">
</form>